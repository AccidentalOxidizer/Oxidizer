{
  "name": "Rust",
  "description": "The Commenting System of the Internet",
  "version": "0.1",
  "permissions": [
    "activeTab",
    "webNavigation",
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*",
    "file:///*/*",
    "*://*/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["rust.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Comment the Internet",
    "default_icon": {
      "19": "images/icon18.png",
      "38": "images/icon36.png"
    },
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "web_accessible_resources": [
    "cleanslate.css"
  ],
  "content_scripts": [{
    "css": ["cleanslate.css"],
    "js": ["comment.js"],
    "matches": ["*://*/*"]
  }],
  "manifest_version": 2
}
