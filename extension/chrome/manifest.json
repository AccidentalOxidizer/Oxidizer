{
  "name": "Oxidizer",
  "description": "The Commenting System of the Internet",
  "version": "0.3",
  "permissions": [
    "http://localhost:3000/test/comments",
    "http://127.0.0.1:3000/test/comments",
    "http://localhost:4568/*",
    "http://localhost:4568/auth/github",
    "http://localhost:4568/auth/github/callback",
    "activeTab",
    "webNavigation",
    "tabs",
    "background",
    "storage",
    "http://*/*",
    "https://*/*",
    "file:///*/*",
    "*://*/*",
    "<all_urls>",
    "http://localhost:3000/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Comment the Internet",
    "default_icon": {
      "19": "images/icon18.png",
      "38": "images/icon36.png"
    },
    "default_popup": "popup.html"
  },
  "commands": {
    "open": {
      "suggested_key": {
        "default": "Ctrl+Shift+U"
      },
      "description": "open",
      "global": false
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "chrome_style": true
  },
  "web_accessible_resources": [
    "cleanslate.css",
    "sideframe.html"
  ],
  "content_scripts": [{
    "css": ["cleanslate.css", "trigger.css"],
    "js": ["contentscript.js"],
    "matches": ["*://*/*"],
    "run_at": "document_end"
  }],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2
}
